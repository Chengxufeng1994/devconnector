{
  "name": "devconnector",
  "version": "1.0.0",
  "description": "Social network for developers",
  "main": "server.ts",
  "scripts": {
    "clean": "rimraf dist/*",
    "build": "tsc --project ./",
    "start": "npm run build && NODE_ENV=production node ./dist/server.js",
    "server": "NODE_ENV=development nodemon src/server.ts",
    "tslint": "tslint -c tslint.json -p tsconfig.json --fix 'src/**/*.{ts,tsx}'",
    "tslint-check": "tslint-config-prettier-check ./tslint.json",
    "prettier:check": "prettier --list-different \"src/**/*.{ts,tsx}\"",
    "prettier:write": "prettier --write \"src/**/*.{ts,tsx}\"",
    "prepare": "husky install",
    "ncu": "ncu"
  },
  "keywords": [],
  "author": "Benny Cheng",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^5.0.1",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "express-validator": "^6.12.0",
    "gravatar": "^1.8.1",
    "helmet": "^4.6.0",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.12.13",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/cors": "^2.8.10",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.12",
    "@types/gravatar": "^1.8.2",
    "@types/jsonwebtoken": "^8.5.1",
    "@types/mongoose": "^5.11.97",
    "@types/morgan": "^1.9.2",
    "@types/node": "^15.12.2",
    "concurrently": "^6.2.0",
    "husky": "^6.0.0",
    "lint-staged": "^11.0.0",
    "nodemon": "^2.0.7",
    "npm-check-updates": "^11.6.0",
    "prettier": "2.3.1",
    "rimraf": "^3.0.2",
    "ts-node": "^10.0.0",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.3.2"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "npm run prettier:write",
      "npm run tslint"
    ]
  }
}
