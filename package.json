{
  "name": "devconnector",
  "version": "1.0.0",
  "description": "Social network for developers",
  "main": "server.ts",
  "scripts": {
    "clean": "rimraf ./dist/*",
    "_comment_": "Use pm2 tutorial https://medium.com/@ahmedkhalilbejaoui/build-a-rest-api-using-node-with-typescript-pm2-with-load-balancer-webpack-for-development-and-87176653d84",
    "commit": "git-cz",
    "build": "tsc --project ./",
    "start": "npm run build && NODE_ENV=production node ./dist/server.js",
    "server": "NODE_ENV=development nodemon --watch 'src/**/*' src/server.ts",
    "client": "npm run dev --prefix client",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:stop": "pm2 delete ecosystem.config.js",
    "pm2:reload": "pm2 reload ecosystem.config.js",
    "pm2:logs": "pm2 logs --lines 2000",
    "pm2:monitor": "pm2 monit",
    "lint": "eslint -c .eslintrc.js --fix --ext .js,.jsx,.ts,.tsx 'src/**/*' 'client/pages/**/*' 'client/components/**/*'",
    "prettier:check": "prettier --list-different \"src/**/*.{js,jsx,ts,tsx}\" \"client/pages/**/*.{js,jsx,ts,tsx}\" \"client/components/**/*.{js,jsx,ts,tsx}\"",
    "prettier:write": "prettier --write \"src/**/*.{js,jsx,ts,tsx}\" \"client/pages/**/*.{js,jsx,ts,tsx}\" \"client/components/**/*.{js,jsx,ts,tsx}\"",
    "prepare": "husky install",
    "postinstall": "$(npm bin)/pm2 install typescript",
    "ncu": "ncu"
  },
  "keywords": [],
  "author": "Benny Cheng",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^5.0.1",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "eslint-config-prettier": "^8.3.0",
    "express": "^4.17.1",
    "express-validator": "^6.12.0",
    "gravatar": "^1.8.1",
    "helmet": "^4.6.0",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.13.2",
    "morgan": "^1.10.0",
    "node-fetch": "^2.6.1",
    "pm2": "^5.1.0",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@commitlint/prompt-cli": "^12.1.4",
    "@types/bcrypt": "^5.0.0",
    "@types/cors": "^2.8.10",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.12",
    "@types/gravatar": "^1.8.2",
    "@types/jsonwebtoken": "^8.5.3",
    "@types/mongoose": "^5.11.97",
    "@types/morgan": "^1.9.2",
    "@types/node": "^16.0.0",
    "@types/node-fetch": "^2.5.10",
    "@typescript-eslint/eslint-plugin": "^4.28.1",
    "@typescript-eslint/parser": "^4.28.1",
    "commitizen": "^4.2.4",
    "concurrently": "^6.2.0",
    "eslint": "^7.30.0",
    "eslint-config-airbnb-typescript": "^12.3.1",
    "eslint-config-next": "^11.0.1",
    "eslint-plugin-import": "^2.23.4",
    "husky": "^7.0.0",
    "lint-staged": "^11.0.0",
    "nodemon": "^2.0.9",
    "npm-check-updates": "^11.8.1",
    "prettier": "2.3.2",
    "rimraf": "^3.0.2",
    "ts-node": "^10.0.0",
    "typescript": "^4.3.5"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "npm run prettier:write",
      "npm run lint"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  }
}
